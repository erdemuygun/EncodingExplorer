<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="EncodingExplorerWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">Encoding Explorer</property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="AdwToolbarView">
            <property name="top-bar-style">raised</property>
            <child type="top">
              <object class="AdwHeaderBar">
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="primary">True</property>
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Main Menu</property>
                    <property name="menu-model">primary_menu</property>
                  </object>
                </child>
              </object>
            </child>
            <property name="content">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="spacing">10</property>
                <child>
                  <object class="GtkStack" id="encoding_explorer_stack">
                    <property name="transition_type">crossfade</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">explorer_mode_view</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="hexpand">true</property>
                            <property name="vexpand">true</property>
                            <child>
                              <object class="GtkPaned">
                                <property name="start-child">
                                  <object class="AdwToolbarView">
                                    <child type="top">
                                      <object class="GtkCenterBox">
                                        <style>
                                          <class name="toolbar" />
                                          <class name="panel-header" />
                                        </style>
                                        <property name="height-request">46</property>
                                        <child type="start">
                                          <object class="GtkBox">
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="yes">&lt;b&gt;Text&lt;/b&gt;</property>
                                                <property name="use-markup">true</property>
                                                <style>
                                                  <class name="dim-label" />
                                                </style>
                                              </object>
                                            </child>
                                            <child>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <property name="content">
                                      <object class="ScrolledWin" id="text_scrolled_win">
                                        <property name="child">
                                          <object class="SourceView" id="source_view_text" />
                                        </property>
                                      </object>
                                    </property>
                                  </object>
                                </property>
                                <property name="end-child">
                                  <object class="AdwToolbarView">
                                    <child type="top">
                                      <object class="GtkCenterBox">
                                        <style>
                                          <class name="toolbar" />
                                          <class name="panel-header" />
                                        </style>
                                        <property name="height-request">46</property>
                                        <child type="start">
                                          <object class="GtkBox">
                                            <property name="spacing">16</property>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="yes">&lt;b&gt;Encoding&lt;/b&gt;</property>
                                                <property name="use-markup">true</property>
                                                <style>
                                                  <class name="dim-label" />
                                                </style>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkDropDown" id="dropdown_encoding">
                                                <property name="model">
                                                  <object class="GtkStringList">
                                                    <items>
                                                      <item>ASCII</item>
                                                      <item>UTF-8</item>
                                                      <item>UTF-16</item>
                                                      <item>UTF-32</item>
                                                      <item>UCS-2</item>
                                                      <item>UCS-4</item>
                                                    </items>
                                                  </object>
                                                </property>
                                                <property name="tooltip-text" translatable="yes">Switch Encoding</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                        <child type="end">
                                          <object class="GtkButton">
                                            <property name="icon-name">encoding-explorer-edit-copy-symbolic</property>
                                            <property name="action-name">win.copy-encoded-text</property>
                                            <property name="tooltip-text" translatable="yes" context="Copy encoded text to clipboard">Copy Encoding</property>
                                            <accessibility>
                                              <property name="label" translatable="yes" context="accessibility">Copy Encoding</property>
                                            </accessibility>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <property name="content">
                                      <object class="ScrolledWin" id="encoding_scrolled_win">
                                        <property name="child">
                                          <object class="SourceView" id="source_view_encoding">
                                            <property name="editable">false</property>
                                          </object>
                                        </property>
                                      </object>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">iee_mode_view</property>
                        <property name="child">
                          <object class="GtkBox"></object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <!-- <child>
                  <object class="GtkRevealer">
                    <property name="transition-duration">300</property>
                    <property name="transition-type">slide-up</property>
                    <binding name="reveal-child">
                      <lookup name="active">bottom_panel_toggle_button</lookup>
                    </binding>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">&#x000062;</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">LATIN SMALL LETTER B</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child> -->
              </object>
            </property>
            <child type="bottom">
              <object class="GtkCenterBox">
                <style>
                  <class name="toolbar" />
                  <class name="panel-header" />
                </style>
                <child type="start">
                  <object class="GtkBox">
                    <property name="spacing">16</property>
                    <child>
                      <object class="GtkLabel">
                        <binding name="label">
                          <lookup name="string" type="GtkStringObject">
                            <lookup name="selected_item">dropdown_encoding</lookup>
                          </lookup>
                        </binding>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Binary</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">34 Characters</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">34 KiB</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkToggleButton" id="bottom_panel_toggle_button">
                    <property name="icon-name">encoding-explorer-panel-bottom-symbolic</property>
                    <property name="action-name">win.toggle-bottom-panel</property>
                    <property name="tooltip-text" translatable="yes" context="Toggle bottom panel">Toggle Bottom Panel</property>
                    <accessibility>
                      <property name="label" translatable="yes" context="accessibility">Toggle Bottom Panel</property>
                    </accessibility>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Preferences</attribute>
        <attribute name="action">app.pref</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">About Encoding Explorer</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
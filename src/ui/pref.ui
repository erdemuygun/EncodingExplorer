<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10" />
  <requires lib="Adw" version="1.5" />
  <template class="PrefDialog" parent="AdwPreferencesDialog">
    <property name="content_width">300</property>
    <property name="title" translatable="yes">Preferences</property>
    <property name="search-enabled">true</property>
    <property name="presentation-mode">floating</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="name">preferences</property>
        <property name="title" translatable="yes">Preferences</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Color Theme</property>
            <property name="description" translatable="yes">Set color theme</property>
            <child>
              <object class="AdwPreferencesRow">
                <style>
                  <class name="pref-row-padding" />
                </style>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="valign">center</property>
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="valign">center</property>
                        <property name="halign">start</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkCheckButton" id="system">
                            <property name="label" translatable="yes" context="System color theme">System</property>
                            <property name="active">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="valign">center</property>
                        <property name="halign">center</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkCheckButton" id="light">
                            <property name="label" translatable="yes" context="Light color theme">Light</property>
                            <property name="group">system</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="valign">center</property>
                        <property name="halign">end</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkCheckButton" id="dark">
                            <property name="label" translatable="yes" context="Dark color theme">Dark</property>
                            <property name="group">system</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Endianness</property>
            <property name="description" translatable="yes">Select byte order</property>
            <child>
              <object class="AdwPreferencesRow">
                <style>
                  <class name="pref-row-padding" />
                </style>
                <child>
                  <object class="GtkCheckButton" id="le">
                    <property name="label" translatable="yes" context="Little Endian">Little Endian</property>
                    <property name="active">true</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesRow">
                <style>
                  <class name="pref-row-padding" />
                </style>
                <child>
                  <object class="GtkCheckButton" id="be">
                    <property name="label" translatable="yes" context="Big Endian">Big Endian</property>
                    <property name="group">le</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Radix</property>
            <property name="description" translatable="yes">Select number base</property>
            <child>
              <object class="AdwComboRow" id="radix">
                <property name="title" translatable="yes">Number base</property>
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item>Binary</item>
                      <item>Octal</item>
                      <item>Decimal</item>
                      <item>Hexadecimal</item>
                    </items>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>